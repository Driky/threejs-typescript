{
    "compilerOptions": {
        "target": "es5",
        "lib":["es6"],
        "module": "amd",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "mapRoot": "/",
        "sourceRoot": "/",
        "outDir": "build",
        "allowJs": false
    },
    "files": [
        "typings/index.d.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
